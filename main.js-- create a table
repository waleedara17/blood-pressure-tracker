  const listUsersBtn = document.getElementById("listUsersBtn");
  listUsersBtn.addEventListener("click", () => {
    fetch('${BASE_URL}'/users/list)
      .then(res => res.json())
      .then(data => {
        if (data.msg === "ok") {
          const users = data.data;
          const div = document.getElementById("usersList");
          div.innerHTML = "";

          if (!users || users.length === 0) {
            div.textContent = "No users found.";
            return;
          }

          // Create a table
          const table = document.createElement("table");
          const headerRow = document.createElement("tr");
          headerRow.innerHTML = "<th>ID</th><th>Name</th>";
          table.appendChild(headerRow);

          users.forEach(u => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
  <td>${u.id}</td>
  <td>${u.name}</td>
`;

            table.appendChild(tr);
          });
          div.appendChild(table);
        } else {
          document.getElementById("usersList").textContent = "Error listing users";
        }
      })
      .catch(err => {
        console.error(err);
        document.getElementById("usersList").textContent = "Error listing users";
      });
  });
